@using System.Web.UI.WebControls
@using IdentitySample.Models
@using Interview
@model Campaign

@{
    ViewBag.Title = "Campaign " + Model.Name + " Delete";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-bar-chart"></i> Octant</a></li>
        <li><a href="@Url.Action("Index", "Home")">Campaigns</a></li>
        <li><a href="@Url.Action("Details", "Campaigns", new { id = Model.IdCampaign })">@Html.DisplayFor(model => model.Name)</a></li>
        <li class="active">Delete</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-danger">
                <div class="box-header with-border">
                    <h3 class="box-title">Delete Campaign</h3>
                </div><!-- /.box-header -->

                <div class="box-body">
                    <span>Are you sure you want to delete this?</span>
                    <br /><br />
                    <span class="campagn-name">@Html.DisplayFor(model => model.Name)</span>
                    <br />
                    <span class="campagn-dates"><label>Start date:</label> @Html.DisplayFor(model => model.StartDate)</span>
                    <br />
                    <span class="campagn-dates"><label>End date:</label> @Html.DisplayFor(model => model.EndDate)</span>
                </div><!-- /.box-body -->
                <div class="box-footer">
                    <form method="post" action="@Url.Action("Delete", "Campaigns", new { id = Model.IdCampaign })" role="form">
                        @Html.AntiForgeryToken()
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-default" })
                    </form>
                </div><!-- /.box-footer -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->

<!-- Change the active in the left side menu -->
<script type="text/javascript">
    $(document).ready(function () {
        $('ul.sidebar-menu > li').removeClass('active');
        $('ul.sidebar-menu > li > a[href="/Campaigns"]').parent().addClass('active');
    });
</script>
